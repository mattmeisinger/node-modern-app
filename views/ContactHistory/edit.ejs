<form action="/contactHistory/update/<%=contactHistory.id%>" method="POST" class="edit">
  <div class="form-group">
    <h2> editing a contactHistory... </h2>

    <% if(flash && flash.err) { %>
      <ul class="alert alert-success">
        <% Object.keys(flash.err).forEach(function(error) { %>
          <li><%- JSON.stringify(flash.err[error]) %></li>
        <% }) %>
      </ul>
    <% } %>

    <div class="form-group" style="width: 400px;">
      <label>data</label>
      <input value="<%= contactHistory.data %>" name="data" type="text" class="form-control"/>
    </div>

    <div class="form-group" style="width: 400px;">
      <label>model</label>
      <input value="<%= contactHistory.model %>" name="model" type="text" class="form-control"/>
    </div>

    <div class="form-group" style="width: 400px;">
      <label>summary</label>
      <input value="<%= contactHistory.summary %>" name="summary" type="text" class="form-control"/>
    </div>

    <div class="form-group" style="width: 400px;">
      <label>customer</label>

      <div>
        <select name="customer" class="form-control">
          <% for(var i=0; i<customers.length; i++) {%>
          <option value="<%= customers[i].id %>" <%= (customers[i].id === contactHistory.customer)?'selected':''%> ><%= customers[i].firstName + ' ' + customers[i].lastName %></option>
          <% } %>
        </select>
      </div>

    </div>

    <div class="form-group" style="width: 400px;">
      <label>agent</label>

      <div>
        <select name="agent" class="form-control">
          <% for(var i=0; i<agents.length; i++) {%>
          <option value="<%= agents[i].id %>" <%= (parseInt(agents[i].id, 10) === parseInt(contactHistory.agent, 10))?'selected':''%> ><%= agents[i].firstName + ' ' + agents[i].lastName %></option>
          <% } %>
        </select>
      </div>

    </div>

  </div>

  <input type="submit" value="Update ContactHistory" class="btn btn-default"/>
  <a href="/contactHistory/show/<%=contactHistory.id %>" class="btn btn-danger">Cancel</a>

</form>


