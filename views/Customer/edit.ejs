<form action="/customer/update/<%=customer.id%>" method="POST" class="edit">
  <div class="form-group">
    <h2> editing a customer... </h2>

    <% if(flash && flash.err) { %>
      <ul class="alert alert-success">
        <% Object.keys(flash.err).forEach(function(error) { %>
          <li><%- JSON.stringify(flash.err[error]) %></li>
        <% }) %>
      </ul>
    <% } %>

    <div class="form-group" style="width: 400px;">
      <label>firstName</label>
      <input value="<%= customer.firstName %>" name="firstName" type="text" class="form-control"/>
    </div>

    <div class="form-group" style="width: 400px;">
      <label>lastName</label>
      <input value="<%= customer.lastName %>" name="lastName" type="text" class="form-control"/>
    </div>

    <div class="form-group" style="width: 400px;">
      <label>email</label>
      <input value="<%= customer.email %>" name="email" type="text" class="form-control"/>
    </div>

    <div class="form-group" style="width: 400px;">
      <label>phone</label>
      <input value="<%= customer.phone %>" name="phone" type="text" class="form-control"/>
    </div>

    <div class="form-group" style="width: 400px;">
      <label>agent</label>
      <input value="<%= customer.agent %>" name="agent" type="text" class="form-control"/>
    </div>

  </div>

  <input type="submit" value="Update Customer" class="btn btn-default"/>
  <a href="/customer/show/<%=customer.id %>" class="btn btn-danger">Cancel</a>

</form>


